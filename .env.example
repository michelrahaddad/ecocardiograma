# Variáveis de Ambiente - Sistema de Ecocardiograma Grupo Vidah
# Copie este arquivo para .env e configure suas variáveis

# Banco de Dados
DATABASE_URL=postgresql://usuario:senha@localhost:5432/ecocardiograma_db

# Segurança
SESSION_SECRET=sua_chave_secreta_super_segura_aqui

# Configuração do Flask
FLASK_ENV=production
FLASK_DEBUG=False

# Configurações de Deploy
PORT=5000

# Configurações de Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=seu_email@gmail.com
MAIL_PASSWORD=sua_senha_app

# Configurações de Backup (opcional)
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_TO_FILE=True